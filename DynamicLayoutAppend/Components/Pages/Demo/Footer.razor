<div class="custom-footer">
    <p>&copy; @Year @CompanyName</p>
    <p>@AdditionalInfo</p>
</div>

@code {
    [Parameter] public int Year { get; set; } = DateTime.Now.Year;
    [Parameter] public string CompanyName { get; set; } = "My Application";
    [Parameter] public string AdditionalInfo { get; set; } = "Default Footer Info";
}
